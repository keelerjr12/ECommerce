@page
@model IndexModel
@{
    ViewData["Title"] = "Jewelry Biz";
}
<div id="content-left-sidebar">
    <div id="main-navbar">
        <ul>
            <li><a asp-page="/Index" asp-area="Products" asp-route-category="Everyday">Everyday Jewelry</a></li>
            <li><a asp-page="/Index" asp-area="Products" asp-route-category="BabyBracelets">Baby/Christening Bracelets</a></li>
            <li>Mother's Bracelets</li>
            <li>Grandmother's Bracelets</li>
            <li>Wedding Bracelets</li>
            <li>Earrings</li>
            <li>Necklaces</li>
            <li>Sets</li>
        </ul>
    </div>
    <div id="main-with-navbar">
        <h2>Our Top-Sellers</h2>
        @foreach (var product in Model.ProductViews)
        {
            <h4><a asp-page="/Index" asp-area="Product" asp-route-sku="@product.SKU">@product.Description</a></h4>
            <h6>$@product.Price</h6>
        }
    </div>
</div>

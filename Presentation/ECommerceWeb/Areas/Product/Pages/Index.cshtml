@page "{sku}"
@model Areas.Product.Pages.ProductModel

<h2>@Model.Description</h2>
<div>
    <label>SKU:</label>
    <span>@Model.SKU</span>
</div>
<div>
    <label>Price:</label>
    <span>$@Model.Price</span>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
    <form asp-page="/Cart" asp-area="Sales" method="post">
        <input value="@Model.SKU" name="sku" type="hidden" />
        <button type="submit">Add To Cart</button>
    </form>
    }
</div>
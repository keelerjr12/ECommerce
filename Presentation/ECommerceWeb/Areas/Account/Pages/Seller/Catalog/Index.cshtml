@page
@model ProductCatalogModel

<h2>Product Catalog</h2>
<table>
    <thead>
        <tr>
            <th>Edit</th>
            <th>SKU</th>
            <th>Name</th>
            <th>Price</th>
            <th>Catalog Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var pv in Model.ProductViews)
    {
        <tr>
            <td><a>Edit</a></td>
            <td>@pv.SKU</td>
            <td>@pv.Name</td>
            <td>@pv.Price</td>
            <td>@pv.Status</td>
            <td>
                <form method="post">
                    <input hidden name="sku" value="@pv.SKU"/>
                    @if (pv.Status == "Active")
                    {
                        <input type="submit" asp-page-handler="Deactivate" value="Deactivate"/>
                    }
                    else
                    {
                        <input type="submit" asp-page-handler="Activate"  value="Activate" />
                    }
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-page="AddProduct">Add Product</a>